{
  "name": "deploy-gh-pages-action",
  "module": "src/index.ts",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  },
  "scripts": {
    "postinstall": "bunx husky install",
    "all": "bun run lint",
    "lint": "eslint ./src/*.ts",
    "lint:fix": "eslint --fix ./src/*.ts",
    "build": "ncc build ./src/index.ts -o dist --minify",
    "tsc": "tsc"
  },
  "lint-staged": {
    "src/*.ts": ["eslint"]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vercel/ncc": "^0.38.1",
    "bun-types": "latest",
    "eslint": "^8.52.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/glob": "^0.4.0",
    "@actions/io": "^1.1.3"
  }
}